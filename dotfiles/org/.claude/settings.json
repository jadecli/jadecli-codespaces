{
  "$schema": "https://claude.ai/schemas/settings.json",
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(make *)",
      "Bash(uv *)",
      "Bash(ollama *)",
      "Read",
      "Glob",
      "Grep"
    ],
    "deny": []
  },
  "preferences": {
    "autoApprovePatterns": [
      "context/**/*.md",
      "docs/**/*.md"
    ]
  },
  "agent": {
    "preferOllama": true,
    "qualityThreshold": 0.7,
    "trackTokens": true
  }
}
